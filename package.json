{
  "name": "payg-service-contracts",
  "version": "1.0.0",
  "description": "A simple pay-as-you-go service contract in Solidity",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.js",
    "format": "prettier --write \"**/*.{js,json,md,sol}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,sol}\"",
    "lint": "eslint . --ext .js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:fix": "eslint . --ext .js --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write"],
    "*.sol": ["prettier --write"]
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "pay-as-you-go"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "hardhat": "^2.19.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.11"
  }
}

